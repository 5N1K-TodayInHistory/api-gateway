# Database Configuration
DATABASE_URL=jdbc:postgresql://postgres:5432/api_gateway
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# HikariCP Connection Pool Configuration (optional, defaults shown)
# Maximum number of connections in the pool (default: 20)
DATASOURCE_MAX_POOL_SIZE=20
# Minimum number of idle connections to maintain (default: 5)
DATASOURCE_MIN_IDLE=5
# Connection timeout in milliseconds (default: 30000)
DATASOURCE_CONNECTION_TIMEOUT=30000
# Idle timeout in milliseconds (default: 600000 = 10 minutes)
DATASOURCE_IDLE_TIMEOUT=600000
# Max lifetime in milliseconds (default: 1800000 = 30 minutes)
DATASOURCE_MAX_LIFETIME=1800000
# Leak detection threshold in milliseconds (default: 60000 = 1 minute)
DATASOURCE_LEAK_DETECTION_THRESHOLD=60000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters

# Google OAuth2 Configuration
GOOGLE_BACKOFFICE_CLIENT_ID=your_google_backoffice_client_id_here
GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id_here
GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Server Configuration
SERVER_PORT=8080

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=your-username/api-gateway

# Deploy Service
DEPLOY_BASE_URL=https://infra.5n1k.io
